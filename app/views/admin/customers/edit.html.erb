<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>
    <%= @customer.last_name %> <%= @customer.first_name %>
    さんの会員情報編集
    </h2>
    会員ID <%= @customer.id %><br>
    <%= form_with url: admin_customer_path(@customer.id), model: @customer do |f| %>
      <div class="form-group">
      <label>氏名</label>
      <%= f.text_field :last_name, autofocus: true %>
      <%= f.text_field :first_name, autofocus: true %>
      </div>

      <div class="form-group">
      <label>フリガナ</label>
      <%= f.text_field :last_name_kana, autofocus: true %>
      <%= f.text_field :first_name_kana, autofocus: true %>
      </div>

      <div class="form-group">
      <label>郵便番号</label>
      <%= f.text_field :kana, autofocus: true %>
      </div>

      <div class="form-group">
      <label>住所</label>
      <%= f.text_field :kana, autofocus: true %>
      </div>

      <div class="form-group">
      <label>電話番号</label>
      <%= f.text_field :kana, autofocus: true %>
      </div>

      <div class="form-group">
      <label>メールアドレス</label>
      <%= f.text_field :kana, autofocus: true %>
      </div>

      <div class="form-group">
      <label>会員ステータス</label>
      <%= f.radio_button :is_deleted, "valid" %>
      <%= f.label :is_deleted_valid, "有効" %>
      <%= f.radio_button :is_deleted,  "invalid" %>
      <%= f.label :is_deleted_invalid, "退会" %>
      </div>
      <%= f.submit "編集する", class:"btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>