<h2>注文履歴一覧</h2>
<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <th>
        <%= link_to admin_order_path(order) do %>
        <%= order.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
        <% end %>
      </th>
      <th>
        <%= order.customer.last_name + order.customer.first_name %>
      </th>
      <th><%= order.order_details.sum(:amount) %></th>
    </tr>
    <% end %>
  </tbody>
</table>