 <h2 class="mt-3">新規商品登録</h2>

      <%= form_with model: @items do |f| %>
      <div class="form-group">
      <h4>商品名</h4>
      <%= f.text_field :name %>
      </div>
      <div class="form-group">
      <h4>商品説明</h4>
      <%= f.text_area :introduction %>
      </div>
      <div class="form-group">
      <%= f.submit "新規登録", class:"btn btn-success" %>
      <% end %>
  </div>