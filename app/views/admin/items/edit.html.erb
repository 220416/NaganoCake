<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h1>商品編集</h1>

    <%= form_with url: admin_item_path(@item.id), model: @item do |f| %>
      <div class="form-group">
      <label for="inputImage">商品画像</label>
      <%= f.file_field :image  %>
      </div>
      <div class="form-group">
      <label for="inputName">商品名</label>
      <%= f.text_field :name, autofocus: true, placeholder:"商品名",　class:"form-control book_title" %>
      </div>
      <div class="form-group">
      <label for="inputIntroduction">商品説明</label>
      <%= f.text_field :introduction, placeholder:"商品説明",　class:"form-control book_body" %>
      </div>
      <div class="form-group">
      <label for="inputPrice">税込価格</label>
      <%= f.text_field :price, placeholder:"税込価格", class:"form-control book_body" %>
      </div>
      <div class="form-group">
      <%= f.submit "編集する", class:"btn btn-success" %>
      </div>
    <% end %>
    </div>
  </div>
</div>