<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>
    <%= current_customer.last_name %> <%= current_customer.first_name %>
    さんの会員情報編集
    </h2>
    <%= form_with url: customers_path, model: @customer, method: :patch do |f| %>
      <div class="form-group">
      <label>氏名</label>
      <%= f.text_field :last_name, autofocus: true %>
      <%= f.text_field :first_name %>
      </div>

      <div class="form-group">
      <label>フリガナ</label>
      <%= f.text_field :last_name_kana %>
      <%= f.text_field :first_name_kana %>
      </div>

      <div class="form-group">
      <label>郵便番号</label>
      <%= f.text_field :postal_code %>
      </div>

      <div class="form-group">
      <label>住所</label>
      <%= f.text_field :address %>
      </div>

      <div class="form-group">
      <label>電話番号</label>
      <%= f.text_field :telephone_number %>
      </div>

      <div class="form-group">
      <label>メールアドレス</label>
      <%= f.text_field :email %>
      </div>

      <div class="row">
      <%= f.submit "編集内容を保存", class:"btn btn-success" %>
      <% end %>
      </div>

      <div class="row">
      <%= link_to customers_confirm_withdraw_path, class:"btn btn-danger" do %>
      退会する
      <% end %>
      </div>

    </div>
  </div>
</div>