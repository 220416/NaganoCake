
<div>
  <div>
  <h2>ショッピングカート</h2>

    <table class="table">
      <thead>
        <tr>
        <th></th>
        <th>商品名</th>
        <th>単価（税込み）</th>
        <th>数量</th>
        <th>小計</th>
        <th>　　</th>
        </tr>
      </thead>
      <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
        <td></td>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.item.with_tax_price %></td>
        <td><%= cart_item.amount %></td>
        <td><%= cart_item.item.subtotal %></td>
        <td></td>
        <td>合計金額<%= @total += cart_item.subtotal %></td>
        </tr>
