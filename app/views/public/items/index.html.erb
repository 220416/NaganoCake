<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>商品一覧</h2>
        <table class="table">
          <thead>
            <tr>
            <th></th>
            <th>商品画像</th>
            <th>商品ID</th>
            <th>商品名</th>
            <th>商品説明</th>
            <th>販売価格</th>
            <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @items.each do |item| %>
            <tr>
            <td></td>
            <td>
            <% if item.image.attached? %>
            <%= image_tag item.image, size: "200x200" %>
            <% else %>
            <%= image_tag 'noimage', size: "200x200" %>
            <% end %>
            </td>
            <td><%= item.id %></td>
            <td>
              <%= link_to item_path(item.id) do %>
              <%= item.name %>
              <% end %>
            </td>
            <td><%= item.introduction %></td>
            <td><%= item.price %></td>
            </tr>
            <% end %>
        </tbody>
        </table>
        <%= paginate @items %>
      </div>
    </div>
  </div>


</main>