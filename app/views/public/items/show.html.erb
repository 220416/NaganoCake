
  <div class="col-md-8 offset-md-1">
  <h2><%= @item.name %></h2>
    <div>
      <% if @item.image.attached? %>
      <%= image_tag @item.image, size: "100x100" %>
      <% else %>
      <%= image_tag 'noimage', size: "100x100" %>
      <% end %>
      <br>
      <p><%= @item.introduction %></p>
      <p>￥<%= @item.price %>（税込）</p>

      <%= form_with url: item_path(@item.id), model: @cart_item do |f| %>
      <%= f.select :amount, *[1..5] %>
      <%= f.hidden_field :cart_item, :value => {"item.id" => @item.id, "amount" => :amount } %>
      <%= f.submit "カートに入れる",class:"btn-success" %>
      <% end %>
  </div>