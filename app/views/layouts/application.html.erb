<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-white">
        <div class="container">
          <div class="nav navbar-brand p-1">
          <%= link_to "LOGO", root_path %>
          <div class="col">
          <!--管理者用ヘッダ-->
          <% if admin_signed_in? %>
            <%= link_to "商品一覧", admin_items_path %>
            <%= link_to "会員一覧", admin_customers_path %>
            <%= link_to "注文履歴一覧", admin_root_path %>
            <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
          </div>

          <!--顧客用ヘッダ-->
          <% elsif customer_signed_in? %>
          <ul class="nav justify-content-center">
            <li class="nav-item">
            <%= link_to "マイページ", customers_path, class:"nav justify-content-end" %></li>
            <li class="nav-item">
            <%= link_to "商品一覧", items_path %>
            <li class="nav-item">
            <%= link_to "カート", cart_items_path %>
            <li class="nav-item">
            <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %></li>

          </ul>

          <!--ログイン前-->
          <% else %>
          <div class="col">
            <%= link_to homes_about_path do %>
            <!--<i class="fas fa-home"></i>-->
            About
            <% end %>

            <%= link_to items_path do %>
            <!--<i class="fas fa-home"></i>-->
            商品一覧
            <% end %>

            <%= link_to new_customer_registration_path do %>
            <!--<i class="fas fa-home"></i>-->
            新規登録
            <% end %>

            <%= link_to new_customer_session_path do %>
            <!--<i class="fas fa-home"></i>-->
            ログイン
            <% end %>
          </div>
          <% end %>

        </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
